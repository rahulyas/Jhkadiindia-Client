<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product_Name"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/ten_dp"/>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/two_hundred"
            android:layout_height="@dimen/two_hundred"
            android:padding="@dimen/ten_dp"
            android:src="@drawable/baseline_agriculture_24"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/product_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fifteen_dp"
            android:text="Rate"
            android:textSize="@dimen/fifteen_dp"/>

        <TextView
            android:id="@+id/product_discountrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fifteen_dp"
            android:text="Discount_Rate"
            android:textSize="@dimen/fifteen_dp"/>

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fifteen_dp"
            android:text="Description"
            android:textSize="@dimen/fifteen_dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/add_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/twenty_dp"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:text="Menu"
                app:icon="@drawable/ic_baseline_menu_24"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_baseline_delete_24"
                android:layout_above="@+id/add_fab"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/twenty_dp"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_baseline_update_24"
                android:layout_above="@+id/delete"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/twenty_dp"
                />
        </RelativeLayout>

    </LinearLayout>

</layout>